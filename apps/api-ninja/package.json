{
  "name": "@stream-ninja/api-ninja",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "tags": ["scope:api"],
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@stream-ninja/api-ninja:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@stream-ninja/api-ninja:build:development"
          },
          "production": {
            "buildTarget": "@stream-ninja/api-ninja:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "docker-build": {
        "dependsOn": [
          "build"
        ],
        "command": "docker build -f apps/api-ninja/Dockerfile . -t stream-ninja-api-ninja"
      }
    }
  }
}
